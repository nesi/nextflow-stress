// Simple Nextflow config for Slurm
// Guaranteed to work with basic Slurm installations

// Process defaults - simple defaults that work with most Slurm installations
process {
    executor = 'slurm'
    cpus = 4
    memory = '2 GB'
    time = '15m'
}

// Executor settings - MODIFIED FOR HIGH SCALE
executor {
    $slurm {
        queueSize = 10000          // Submit up to 5000 jobs at once
        submitRateLimit = '500/1m'  // Submit up to 500 jobs per minute
        pollInterval = '30 sec'     // Check job status every 30 seconds
        queueStatInterval = '5min'  // Check queue status every 5 minutes
        jobName = { "stress_${task.index}" }
    }
}

// Report configuration
report {
    enabled = true
    file = "${params.output_dir}/reports/execution_report.html"
    overwrite = true
}

trace {
    enabled = true
    file = "${params.output_dir}/reports/execution_trace.txt"
    overwrite = true
}

timeline {
    enabled = true
    file = "${params.output_dir}/reports/execution_timeline.html"
    overwrite = true
}

// Basic parameters
params {
    job_count = 50
    output_dir = 'results'
    max_cpus = 4
    max_memory = '4 GB'
}

// Profiles for different run scenarios
profiles {
    // For small test runs
    test {
        params.job_count = 10
    }
    
    // For medium runs
    medium {
        params.job_count = 50
    }
    
    // For large stress tests
    full {
        params.job_count = 200
    }
}
